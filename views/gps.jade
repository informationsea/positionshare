extends layout

block content
  script(type="text/javascript",src="https://cdn.socket.io/socket.io-1.2.0.js")
  script(type="text/javascript",src="http://maps.googleapis.com/maps/api/js?key=GOOGLEMAP_APIKEY&sensor=true")
  script(type="text/javascript",src="./js/mainjs.js")    
  div(style="width: 100%; height: 70%;",id="map_canvas")
  div(class="container")
    div(class="row")
      div(id="status")
      div(style="background:#f0f0f0;height:5em;overflow: scroll;",id="messagearea")
        | No Messages
      form(role="form",class="form-inline",onsubmit="sendmessage();return false;")
        div(class="form-group",style="width: 70%;display:inline-block;")
          input(type="text", class="form-control", id="comment", name="comment", placeholder="Comment")
        button(type="button",class="btn btn-primary btn-large",onclick="sendmessage()") Send

  script(type="text/javascript")
    | initialize("#{name}");
